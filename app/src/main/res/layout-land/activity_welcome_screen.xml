<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    >
    <LinearLayout
        android:id="@+id/activity_welcome_screen_eaicon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView

            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_ea_transparent"

            android:layout_marginBottom="30dp"
            android:layout_weight="0.14" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearlayout_viewPager"
        android:background="@drawable/welcomescreen_square"
        android:layout_toRightOf="@id/activity_welcome_screen_eaicon"

        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="230dp"

        android:layout_marginTop="25dp"
        android:layout_marginLeft="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical"
            android:gravity="center"

            >


            <android.support.v4.view.ViewPager
                android:id="@+id/welcomeScreen_viewPager"
                android:background="@color/white"
                android:layout_width="200dp"
                android:layout_height="180dp"



                >

            </android.support.v4.view.ViewPager>

            <!--
                <com.hanks.htextview.HTextView
                    android:id="@+id/text_viewPager"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:maxWidth="170dp"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="#bdbdbd"
                    htext:animateType="scale"
                    android:background="#1d262a"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"


                    />
                -->

        </LinearLayout>



    </LinearLayout>


    <Button
        android:id="@+id/welcomescreen_button"
        android:layout_below="@+id/linearlayout_viewPager"
        android:layout_toRightOf="@+id/activity_welcome_screen_eaicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/round_button_shape_color1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="bottom"

        />




</RelativeLayout>