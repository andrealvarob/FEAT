<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_light"
    android:gravity="center"
    tools:context="pit.feat.signUp.ChooseMyFetish">


    <ImageView
        android:id="@+id/choose_my_fetish_ea_icon"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon_ea_transparent"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/choose_my_fetish_textView" />

    <pit.feat.utility.SecretTextView
        android:id="@+id/choose_my_fetish_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_my_fetish_ea_icon"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Selecione seus fetiches"
        android:layout_marginTop="30dp"
        />



    <ScrollView
        android:id="@+id/choose_my_fetish_ScrollView"
        android:layout_below="@+id/choose_my_fetish_textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/background_light"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            >

            <ExpandableListView
                android:id="@+id/choose_my_fetish_ExpandableListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:background="@color/background_light"
                android:contextClickable="false"
                android:drawSelectorOnTop="false"
                >


            </ExpandableListView>

        </LinearLayout>





    </ScrollView>


    <Button
        android:id="@+id/choose_my_fetish_button"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_button_shape_color1"
        android:text="continuar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />




</RelativeLayout>
