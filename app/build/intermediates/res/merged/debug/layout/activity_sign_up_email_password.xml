<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".loginEmailPassword.SignUpEmailPassword">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <!-- Username block -->
        <LinearLayout
            android:id="@+id/username_password_boxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="140dp"
                android:layout_height="187dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Username icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user_icon"
                    android:layout_gravity="center"/>
                <!-- Username text field -->
                <EditText
                    android:id="@+id/signup_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e-mail"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColorHint="#bdbdbd"
                    android:layout_marginLeft="15dp"
                    android:background="#263238"
                    android:letterSpacing="0"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:textColor="#bdbdbd"
                    />

            </LinearLayout>

            <!-- Username bottom line -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bdbdbd"></LinearLayout>

            <LinearLayout
                android:id="@+id/password_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Password icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/lock_icon"
                    android:layout_gravity="center"/>

                <!-- Password text field -->
                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:hint="password"
                    android:textColorHint="#bdbdbd"
                    android:layout_marginLeft="15dp"
                    android:background="#263238"
                    android:inputType="textPassword"
                    android:letterSpacing="0"
                    android:textSize="16dp"
                    android:textColor="#bdbdbd"/>

            </LinearLayout>

            <!-- Password bottom line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bdbdbd"
                android:layout_marginBottom="30dp"></LinearLayout>






            <!-- Login Button -->
            <Button

                android:id="@+id/signUpButton"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_shape"
                android:textStyle="normal"
                android:text="Sign up"
                android:textSize="16dp"
                android:textColor="#bdbdbd"
                android:textAllCaps="false"
                android:gravity="center"




                android:letterSpacing="0"
                android:layout_weight="0.02"
                android:padding="16dp"
                android:layout_marginBottom="5dp" />








        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
