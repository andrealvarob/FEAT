<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_screen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="1"
    >

    <LinearLayout
        android:id="@+id/menu_bar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/menu_bar_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/background_dark"
            android:weightSum="10"
            >




            <ImageView
                android:layout_weight="1"
                android:id="@+id/menu_button"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/menu_button"

                />


            <ImageView
                android:id="@+id/main_menu_ea"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"

                android:src="@drawable/icon_ea_transparent"
                />

            <ImageView
                android:id="@+id/main_menu_chaticon"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_chat"
                android:clickable="true"
                />





        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@color/background_dark"
        android:id="@+id/menu_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginRight="40dp"

        >



        <RelativeLayout
            android:background="@color/background_dark"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            >

            <LinearLayout
                android:id="@+id/user_menu_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.facebook.login.widget.ProfilePictureView
                        android:id="@+id/user_profile_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        
                        android:src="@drawable/profile_pic_sample"
                        />

                    <ImageView
                        android:id="@+id/user_profile_border"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile_pic_border"
                        />


                </FrameLayout>



                <TextView
                    android:id="@+id/user_name_textview"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Lucas Pinheiro"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/user_fetiches_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Bondage, Dominação."
                    android:textColor="@color/button_color_1"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp"

                >

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/welcomescreen_square"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:padding="10dp"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/icon_settings"
                            android:background="@color/background_light"

                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textColor="@color/white"
                            android:text="Configurações"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:background="@color/background_light"
                            />


                    </LinearLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/welcomescreen_square"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:padding="10dp"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:paddingTop="9dp"
                            android:paddingBottom="9dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/icon_localspot"
                            android:background="@color/background_light"

                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textColor="@color/white"
                            android:text="Localização"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:background="@color/background_light"
                            />


                    </LinearLayout>



                </RelativeLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp"

                >

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/welcomescreen_square"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        >


                        <ImageView
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"

                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/icon_premium"
                            android:background="@color/background_light"

                            />
                        <TextView

                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textColor="@color/white"
                            android:text="Premium"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:background="@color/background_light"
                            />

                    </LinearLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"

                    >

                    <LinearLayout
                        android:id="@+id/menu_help_button"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/welcomescreen_square"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/icon_help"
                            android:background="@color/background_light"

                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textColor="@color/white"
                            android:text="Ajuda"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:background="@color/background_light"
                            />


                    </LinearLayout>



                </RelativeLayout>



            </LinearLayout>






        </LinearLayout>





    </LinearLayout>



</LinearLayout>